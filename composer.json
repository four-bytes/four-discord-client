{
    "name": "four-bytes/four-discord-client",
    "description": "Discord webhook client using PSR-18",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "4 Bytes",
            "email": "info@4bytes.de"
        }
    ],
    "require": {
        "php": "^8.1",
        "four-bytes/four-http-client": "^4.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "php-http/mock-client": "^1.6",
        "nyholm/psr7": "^1.8"
    },
    "suggest": {
        "symfony/http-client": "PSR-18 HTTP client implementation",
        "guzzlehttp/guzzle": "Alternative PSR-18 HTTP client implementation"
    },
    "autoload": {
        "psr-4": {
            "Four\\Discord\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Four\\Discord\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=6"
    }
}
